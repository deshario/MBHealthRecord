<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff9a7d8"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/col1"
        android:background="#ffffffff"
        android:padding="20dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dip"
        android:layout_marginRight="20dip">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="20.0sp"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="วันคลอดของฉัน" />

            <View
                android:background="@color/success_bootstrap"
                android:layout_width="fill_parent"
                android:layout_height="2.0dip"
                android:layout_marginTop="10.0dip" />

            <TextView
                android:textSize="@dimen/customTitle"
                android:textColor="#80000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18.0dip"
                android:text="วันแรกที่เป็นประจำเดือนล่าสุด" />

            <EditText
                android:textSize="@dimen/customEntry"
                android:textColor="#ff000000"
                android:id="@id/inputdate"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.0dip"
                android:hint="วันที่/เดือน/พ.ศ"
                android:inputType="number" />

            <TextView
                android:textSize="@dimen/customTitle"
                android:textColor="#80000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18.0dip"
                android:text="ระยะห่างของรอบเดือนแต่ละครั้ง" />

            <Spinner
                android:textColor="#ffffffff"
                android:id="@id/input_length"
                android:background="@drawable/spinner_border"
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10.0dip"
                android:spinnerMode="dropdown" />

            <LinearLayout
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30.0dip">

                <Button
                    android:textColor="@color/default_bootstrap"
                    android:id="@+id/cleardata"
                    android:background="@color/danger_bootstrap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:text="ล้างฟอร์ม" />

                <Button
                    android:textColor="@color/default_bootstrap"
                    android:id="@+id/savedata"
                    android:background="@color/success_bootstrap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ตกลง" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>